<UserControl x:Class="BSL.StairDrawing.Views.Tabs.MainTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSL.StairDrawing.Views.Tabs"
             xmlns:views="clr-namespace:BSL.StairDrawing.Views"
             xmlns:viewmodels="clr-namespace:BSL.StairDrawing.ViewModels"
             d:DataContext="{d:DesignInstance viewmodels:StairDrawingViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <views:CompanyLogo Grid.Row="0" Grid.ColumnSpan="2"></views:CompanyLogo>
        <views:ChoiceInput Grid.Column="0" Grid.Row="1">

        </views:ChoiceInput>
        <views:NamesInput Grid.Column="1" Grid.Row="1"></views:NamesInput>

    </Grid>
</UserControl>
