<UserControl x:Class="BSL.StairDrawing.Views.NamesInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BSL.StairDrawing.Views"
             mc:Ignorable="d" 
             xmlns:tsui="clr-namespace:Tekla.Structures.Dialog.UIControls;assembly=Tekla.Structures.Dialog"
             xmlns:viewmodels="clr-namespace:BSL.StairDrawing.ViewModels"
             d:DataContext="{d:DesignInstance viewmodels:StairDrawingViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!--Row0-->
        <Label Grid.Column="0" Grid.Row="0" Content="Stringer names" ></Label>
        <tsui:WpfFilterCheckBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" AttributeName="StringerNames"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="0" Width="{Binding LongTextBoxWidth}" VerticalContentAlignment="Center" Text="{Binding StringerNames}"></TextBox>
        <!--Row1-->
        <Label Grid.Column="0" Grid.Row="1" Content="Angle names" ></Label>
        <tsui:WpfFilterCheckBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" AttributeName="AngleNames"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="1" Width="{Binding LongTextBoxWidth}" VerticalContentAlignment="Center" Text="{Binding AngleNames}"></TextBox>
        
        <!--Row2-->
        <Label Grid.Column="0" Grid.Row="2" Content="Step names" ></Label>
        <tsui:WpfFilterCheckBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" AttributeName="TreadNames"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="2" Width="{Binding LongTextBoxWidth}" VerticalContentAlignment="Center" Text="{Binding TreadNames}"></TextBox>
        
        <!--Row3-->
        <Label Grid.Column="0" Grid.Row="3" Content="Detail Name"></Label> 
        <tsui:WpfFilterCheckBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" AttributeName="DetailName"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="3" VerticalContentAlignment="Center" Text="{Binding DetailName}"></TextBox>

        <!--Row4-->
        <Label Grid.Column="0" Grid.Row="4" Content="Detail Mark Attributes"></Label> 
        <tsui:WpfFilterCheckBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" AttributeName="DetailMarkAttributes"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="4" VerticalContentAlignment="Center" Text="{Binding DetailMarkAttributes}"></TextBox>
        
        <!--Row5-->
        <Label Grid.Column="0" Grid.Row="5" Content="Detail View Attributes"></Label>
        <tsui:WpfFilterCheckBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" AttributeName="DetailViewAttributes"></tsui:WpfFilterCheckBox>
        <TextBox Grid.Column="2" Grid.Row="5" VerticalContentAlignment="Center" Text="{Binding DetailViewAttributes}"></TextBox>
        
        
    </Grid>
</UserControl>
